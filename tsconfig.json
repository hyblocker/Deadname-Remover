{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "ES2020",
    "target": "ES2017",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM", "dom.iterable"],
    "downlevelIteration": true,
    "noEmit": true,
    "incremental": true,
    "sourceMap": true
  },
  "types": ["chrome"],
  "ts-node": {
    "esm": true
  }
}
